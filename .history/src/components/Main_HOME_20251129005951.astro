<style>
   :root {
      --base-black: #060606;
      --base-dark: #101010;
      --base-mid: #1a1a1a;
      --text-high: #f5f5f5;
      --text-mid: rgba(229, 229, 229, 0.78);
      --card-border: rgba(255, 255, 255, 0.08);
      --card-shadow: rgba(0, 0, 0, 0.35);
   }

   .scroll-container {
      min-height: 100vh;
      overflow-y: auto;
      scroll-snap-type: y mandatory;
      -webkit-overflow-scrolling: touch;
      background: radial-gradient(circle at 10% 10%, rgba(255, 255, 255, 0.04), transparent 55%),
                  radial-gradient(circle at 90% 0%, rgba(255, 255, 255, 0.05), transparent 45%),
                  linear-gradient(180deg, var(--base-black) 0%, var(--base-dark) 100%);
      color: #111111;
   }

   .scroll-container > section {
      --section-inline-padding: var(--layout-padding-inline, 1.6rem);
      min-height: 100vh;
      padding: 6.5rem var(--section-inline-padding) 4.5rem;
      display: flex;
      justify-content: center;
      align-items: center;
      scroll-snap-align: start;
      position: relative;
      overflow: hidden;
   }

   .section-content {
      width: 100%;
      max-width: 1100px;
      position: relative;
      z-index: 2;
   }

   .hero-section {
      color: var(--text-high);
   }

   .hero-backdrop {
      position: absolute;
      inset: 0;
      background: #000000;
      opacity: 1;
      z-index: 1;
   }

   .hero-text-wrapper {
      min-height: calc(100vh - 12rem);
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      padding-top: clamp(4rem, 6vw, 6rem);
   }

   .hero-main-title {
      margin: 0;
      font-size: clamp(3.5rem, 10vw, 6.2rem);
      font-weight: 800;
      letter-spacing: -0.045em;
      line-height: 1.1;
   }

   .hero-panel-grid {
      width: 100%;
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: clamp(1.5rem, 3.6vw, 3.8rem);
      row-gap: clamp(2rem, 4vw, 4.5rem);
      margin-top: clamp(2rem, 5vw, 4rem);
   }

   .hero-panel {
      position: relative;
      border-radius: 34px;
      padding: clamp(1.4rem, 3.2vw, 2.6rem);
      background: #ffffff;
      border: 1px solid rgba(255, 255, 255, 0.08);
      box-shadow: 0 25px 70px rgba(0, 0, 0, 0.35);
      color: #0d1f30;
      margin: clamp(0.75rem, 2vw, 1.5rem);
      opacity: 0;
      animation-duration: 0.9s;
      animation-fill-mode: forwards;
      animation-delay: var(--panel-delay, 0s);
   }

   .hero-panel--left {
      grid-column: 1 / span 1;
      text-align: left;
   }

   .hero-panel--right {
      grid-column: 2 / span 1;
      text-align: right;
   }

   .hero-panel--full {
      grid-column: 1 / -1;
      text-align: center;
   }

   .hero-panel-text {
      margin: 0;
      font-size: clamp(1.4rem, 4vw, 2.4rem);
      font-weight: 600;
      letter-spacing: -0.02em;
   }

   .hero-headline {
      color: #0d1f30;
   }

   .slide-left {
      transform: translateX(-40px);
      animation-name: slideInLeft;
   }

   .slide-right {
      transform: translateX(40px);
      animation-name: slideInRight;
   }

   .slide-bottom {
      transform: translateY(40px);
      animation-name: slideInUp;
   }

   @keyframes slideInLeft {
      0% {
         opacity: 0;
         transform: translateX(-70px);
      }
      100% {
         opacity: 1;
         transform: translateX(0);
      }
   }

   @keyframes slideInRight {
      0% {
         opacity: 0;
         transform: translateX(70px);
      }
      100% {
         opacity: 1;
         transform: translateX(0);
      }
   }

   @keyframes slideInUp {
      0% {
         opacity: 0;
         transform: translateY(70px);
      }
      100% {
         opacity: 1;
         transform: translateY(0);
      }
   }

   .cta-button {
      display: inline-flex;
      align-items: center;
      gap: 0.55rem;
      padding: 0.9rem 1.9rem;
      border-radius: 999px;
