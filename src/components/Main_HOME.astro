   <script>
      function initializeAnimations() {
         // Scroll-triggered fade-in animation
         const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
         };

         const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
               if (entry.isIntersecting) {
                  entry.target.classList.add('visible');
               }
            });
         }, observerOptions);

         // Reset all animations first
         document.querySelectorAll('.scroll-fade').forEach(el => {
            el.classList.remove('visible');
         });

         // Show hero section immediately on page load
         const heroElements = document.querySelectorAll('.hero-section .scroll-fade');
         heroElements.forEach(el => {
            el.classList.add('visible');
         });

         // Observe all scroll-fade elements
         document.querySelectorAll('.scroll-fade').forEach(el => {
            observer.observe(el);
         });

         // Trigger check for elements already in view
         setTimeout(() => {
            document.querySelectorAll('.scroll-fade').forEach(el => {
               const rect = el.getBoundingClientRect();
               const windowHeight = window.innerHeight;
               if (rect.top < windowHeight * 0.9) {
                  el.classList.add('visible');
               }
            });
         }, 100);
      }

      function initializeScrollFix() {
         // Comprehensive scroll behavior fixes
         const html = document.documentElement;
         const body = document.body;
         
         // Ensure root elements allow proper scrolling
         html.style.overflow = 'auto';
         html.style.overflowX = 'hidden';
         html.style.scrollBehavior = 'smooth';
         html.style.height = 'auto';
         
         body.style.overflow = 'auto';
         body.style.overflowX = 'hidden';
         body.style.scrollBehavior = 'smooth';
         body.style.height = 'auto';
         body.style.minHeight = '100vh';

         // Fix all sections for proper scroll behavior
         const sections = document.querySelectorAll('.hero-section, .apps-section, .riddle-section, .summaries-section, .contact-section-wrapper');
         
         sections.forEach((section, index) => {
            const htmlSection = section as HTMLElement;
            
            // Ensure sections don't interfere with scroll
            htmlSection.style.position = 'relative';
            htmlSection.style.overflow = 'visible';
            htmlSection.style.pointerEvents = 'auto';
            htmlSection.style.touchAction = 'pan-y';
            htmlSection.style.zIndex = String(index + 1);
            htmlSection.style.transform = 'translateZ(0)'; // Force hardware acceleration
            
            // Remove any height constraints that might interfere
            htmlSection.style.maxHeight = 'none';
            htmlSection.style.height = 'auto';
         });

         // Ensure main container allows scrolling
         const mainContainer = document.querySelector('.home-main') as HTMLElement;
         if (mainContainer) {
            mainContainer.style.overflow = 'visible';
            mainContainer.style.overflowX = 'hidden';
            mainContainer.style.height = 'auto';
            mainContainer.style.minHeight = '100vh';
            mainContainer.style.position = 'relative';
         }

         // Fix header to not interfere with scrolling
         const header = document.querySelector('.header') as HTMLElement;
         if (header) {
            header.style.position = 'fixed';
            header.style.zIndex = '1000';
            header.style.pointerEvents = 'auto';
         }

         // Ensure content areas don't block scrolling
         const contentAreas = document.querySelectorAll('.section-content, .animated-content, .app-showcase, .contact-section');
         contentAreas.forEach(area => {
            const htmlArea = area as HTMLElement;
            htmlArea.style.pointerEvents = 'auto';
            htmlArea.style.touchAction = 'pan-y';
            htmlArea.style.position = 'relative';
         });

         // Force scroll recalculation
         setTimeout(() => {
            window.scrollTo(0, window.pageYOffset);
         }, 100);
      }

      function debounce(func: (...args: any[]) => void, wait: number) {
         let timeout: ReturnType<typeof setTimeout> | undefined;
         return function executedFunction(...args: any[]) {
            const later = () => {
               clearTimeout(timeout);
               func(...args);
            };
            clearTimeout(timeout);
            timeout = setTimeout(later, wait);
         };
      }

      // Enhanced scroll debugging and monitoring
      function initializeScrollDebugging() {
         const debouncedScrollHandler = debounce(() => {
            const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
            const documentHeight = document.documentElement.scrollHeight;
            const windowHeight = window.innerHeight;
            const scrollPercentage = (scrollTop / (documentHeight - windowHeight)) * 100;
            
            console.log('Scroll Debug:', {
               position: scrollTop,
               documentHeight,
               windowHeight,
               maxScroll: documentHeight - windowHeight,
               percentage: Math.round(scrollPercentage)
            });
         }, 100);

         window.addEventListener('scroll', debouncedScrollHandler, { passive: true });
         
         // Monitor for scroll issues
         let lastScrollTop = 0;
         let scrollStuckCount = 0;
         
         const scrollMonitor = debounce(() => {
            const currentScrollTop = window.pageYOffset || document.documentElement.scrollTop;
            if (Math.abs(currentScrollTop - lastScrollTop) < 1) {
               scrollStuckCount++;
               if (scrollStuckCount > 10) {
                  console.warn('Scroll appears to be stuck, attempting fix...');
                  initializeScrollFix();
                  scrollStuckCount = 0;
               }
            } else {
               scrollStuckCount = 0;
            }
            lastScrollTop = currentScrollTop;
         }, 500);

         window.addEventListener('scroll', scrollMonitor, { passive: true });
      }

      // Add scroll restoration for better UX
      function initializeScrollRestoration() {
         // Ensure scroll position is maintained on page reload
         if ('scrollRestoration' in history) {
            history.scrollRestoration = 'manual';
         }
         
         // Restore scroll position after page load
         window.addEventListener('load', () => {
            const savedScrollPosition = sessionStorage.getItem('scrollPosition');
            if (savedScrollPosition) {
               setTimeout(() => {
                  window.scrollTo(0, parseInt(savedScrollPosition, 10));
                  sessionStorage.removeItem('scrollPosition');
               }, 100);
            }
         });
         
         // Save scroll position before page unload
         window.addEventListener('beforeunload', () => {
            sessionStorage.setItem('scrollPosition', String(window.pageYOffset));
         });
      }

      // Initialize all functions with proper error handling
      function initializeAll() {
         try {
            initializeAnimations();
            initializeScrollFix();
            initializeScrollRestoration();
            
            if (window.location.search.includes('debug=scroll')) {
               initializeScrollDebugging();
            }
            
            // Final scroll check
            setTimeout(() => {
               const documentHeight = document.documentElement.scrollHeight;
               const windowHeight = window.innerHeight;
               console.log('Page initialization complete. Document height:', documentHeight, 'Window height:', windowHeight);
            }, 200);
            
         } catch (error) {
            console.error('Error initializing page:', error);
         }
      }

      // Initialize on page load
      document.addEventListener('DOMContentLoaded', initializeAll);
      
      // Handle Astro view transitions
      document.addEventListener('astro:page-load', initializeAll);
      
      // Re-initialize when page becomes visible (back button)
      document.addEventListener('visibilitychange', () => {
         if (!document.hidden) {
            setTimeout(initializeAll, 100);
         }
      });

      // Handle browser back/forward navigation
      window.addEventListener('pageshow', (event) => {
         if (event.persisted) {
            setTimeout(initializeAll, 100);
         }
      });

      // Handle popstate events (browser back/forward)
      window.addEventListener('popstate', () => {
         setTimeout(initializeAll, 100);
      });

      // Fallback for immediate execution if DOM is already loaded
      if (document.readyState === 'loading') {
         document.addEventListener('DOMContentLoaded', initializeAll);
      } else {
         initializeAll();
      }
   </script>
