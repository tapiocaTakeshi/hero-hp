import ViewTransitions from "astro/components/ViewTransitions.astro";
// Assuming global.css or style.css imports Tailwind or contains necessary base styles
import "../styles/style.css"; 
---

<head>
   <ViewTransitions />
</head>
<main class="min-h-screen" style="background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(240, 248, 255, 0.15) 25%, rgba(248, 250, 252, 0.1) 50%, rgba(255, 255, 255, 0.15) 75%, rgba(240, 248, 255, 0.1) 100%); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px);">
   <!-- Hero Section with Video -->
   <section class="relative overflow-hidden">
      <div class="container mx-auto px-4 py-12 lg:py-20">
         <div class="text-center mb-8" style="background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.1) 50%, rgba(255, 255, 255, 0.25) 100%); backdrop-filter: blur(30px); -webkit-backdrop-filter: blur(30px); border-radius: 32px; padding: 3rem 2rem; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1), 0 1px 0 rgba(255, 255, 255, 0.4) inset; border: 1px solid rgba(255, 255, 255, 0.3);">
            <img
               src="/RiddleLogo.png"
               alt="Riddle Logo"
               class="mx-auto w-full max-w-xs md:max-w-sm mb-8"
               style="filter: drop-shadow(0 4px 16px rgba(0, 0, 0, 0.15)); border-radius: 24px; background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.05) 100%); backdrop-filter: blur(10px); -webkit-backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.3); padding: 8px; box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1), 0 1px 0 rgba(255, 255, 255, 0.3) inset;"
            />
            <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight" style="color: #1a1a1a; text-shadow: 0 2px 4px rgba(255, 255, 255, 0.8), 0 1px 2px rgba(0, 0, 0, 0.3);">
               クイズで繋がる<br />
               <span style="color: #4f46e5; text-shadow: 0 2px 4px rgba(255, 255, 255, 0.8), 0 1px 2px rgba(0, 0, 0, 0.2);">新しい世界</span>
            </h1>
            <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto" style="color: #374151; text-shadow: 0 1px 3px rgba(255, 255, 255, 0.8), 0 1px 2px rgba(0, 0, 0, 0.2); font-weight: 500;">
               あなたの知識を世界に発信し、世界中のクイズ愛好者と繋がろう
            </p>
            <p class="text-lg mb-12" style="color: #4b5563; text-shadow: 0 1px 3px rgba(255, 255, 255, 0.8), 0 1px 2px rgba(0, 0, 0, 0.2); font-weight: 500;">
               知識が変われば、思考が変わる。<br class="sm:hidden"/>Riddleで、君の思考をアップデートしよう。<br />
               <span class="italic" style="color: #6366f1;">Change your thinking.</span>
            </p>
         </div>



         <!-- Video Section -->
         <div class="max-w-4xl mx-auto mb-12">
            <div class="relative rounded-2xl overflow-hidden bg-black" style="background: linear-gradient(135deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.9) 100%); backdrop-filter: blur(20px); -webkit-backdrop-filter: blur(20px); box-shadow: 0 12px 40px rgba(0, 0, 0, 0.3), 0 1px 0 rgba(255, 255, 255, 0.1) inset; border: 1px solid rgba(255, 255, 255, 0.1);">
               <video
                  class="w-full h-auto"
                  controls
                  poster="/RiddleLogo_casual.png"
                  preload="metadata"
                  style="border-radius: 16px;"
               >
                  <source src="/Riddle_ad_1.mp4" type="video/mp4">
                  お使いのブラウザは動画の再生をサポートしていません。
               </video>
            </div>
         </div>

         <!-- Store Buttons -->
         <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-6 mb-16">
            <a href="https://apps.apple.com/jp/app/riddle/id1621658101?l=en-US&itscg=30200&itsct=apps_box_link&mttnsubad=1621658101"
               target="_blank"
               rel="noopener noreferrer"
               class="inline-block transform hover:scale-105 transition-transform duration-300">
               <img
                  src="/Riddle/black.svg"
                  alt="Download on the App Store"
                  class="h-14 w-auto"
               />
            </a>
            <a href="https://play.google.com/store/apps/details?id=com.higuchiyuya.riddle"
               target="_blank"
               rel="noopener noreferrer"
               class="inline-block transform hover:scale-105 transition-transform duration-300">
               <img
                  src="/Riddle/GetItOnGooglePlay_Badge_Web_color_Japanese.png"
                  alt="Get it on Google Play"
                  class="h-14 w-auto"
               />
            </a>
         </div>
      </div>
   </section>

